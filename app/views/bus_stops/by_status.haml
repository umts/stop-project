.page-title Route #{@route.number} Bus Stops

= link_to 'View by sequence', by_sequence_bus_stops_path(number: @route.number)
%br
%br
- if @stops.empty?
  No stops on this route
- else
  - @stops_hash.each_pair do |status, stops|
    = status + ' Stops'
    %ul
      - stops.each do |stop|
        %li
          = link_to edit_bus_stop_path(stop.hastus_id) do
            - stop.name
