- if stop.last_updated.present?
  .smalltext.last-updated
    Last updated by #{stop.last_updated_by} at #{stop.last_updated_at}
- if stop.completed_at.present?
  .smalltext.last-updated
    Completed at #{format_datetime stop.completed_at}
= form_for stop, url: bus_stop_path(stop.hastus_id) do |f|
  %table.edit-form
    %th
      Stop Info
      %tr
        %td= f.label :name
        %td= stop.name
      %tr
        %td= f.label :hastus_id, 'Hastus ID'
        %td= stop.hastus_id
        %tr
          %td= f.label :routes
          %td= stop.route_list
      %tr
        %td= f.label :completed, 'Completed?'
        %td= f.radio_button 'completed', 'yes'
        %td= f.radio_button 'completed', 'no'
      %tr
        %td= f.label :garage_responsible
        %td= f.select :garage_responsible, %w[SATCo UMTS VATCo], include_blank: true
      %tr
        %td= f.label :state_road
        %td= f.radio_button 'state_road', 'yes'
        %td= f.radio_button 'state_road', 'no'
    - BusStop::SUPER_HASH.each do |category, hash|
      %th
        = f.label category
        - hash.each do |name, options|
          %tr
            %td= f.label name
            %td
              - if options.kind_of?(Array)
                = f.select name, options, include_blank: true
              - else
                = f.radio_button name, 'yes'
                %td= f.radio_button name, 'no'
    %tr
      %td= submit_tag 'Save stop', class: 'btn btn-primary submit'
      %td= link_to 'Field Guide', field_guide_bus_stops_path
