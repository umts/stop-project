%h1.page-title Bus stops not updated since #{@date} (#{@stops.count})

= form_with url: outdated_bus_stops_path, local: true, method: :get do |f|
  = f.date_field :date, value: @date
  = f.submit 'Change Date'

= link_to 'Export as CSV', outdated_bus_stops_path(date: params[:date], format: :csv)

- if @stops.present?
  %table.manage
    %thead
      %th Stop
      %th ID
      %th Routes
      %th Updated
      %th
    %tbody
      - @stops.each do |stop|
        %tr
          %td= stop.name
          %td= stop.hastus_id
          %td= stop.route_list
          %td= stop.updated_at.to_formatted_s :db_hm
          %td= link_to 'Edit', edit_bus_stop_path(stop.hastus_id)
  = will_paginate @stops
- else
  No such stops.
